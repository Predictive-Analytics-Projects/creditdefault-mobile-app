        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_sme"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical|start"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/ic_person_outline_white_64dp"
                android:text="Rajasekhar Chalasani"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <TextView
                android:id="@+id/email_sme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_margin="8dp"
                android:paddingStart="64dp"
                android:paddingTop="6dp"
                android:paddingBottom="4dp"
                android:text="rajasekharchalasani2017@northwestern.edu"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_vertical|start"
                android:layout_margin="8dp"
                android:paddingStart="64dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Data Scientiest/Finance SME"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_finance"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical|start"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/ic_person_outline_white_64dp"
